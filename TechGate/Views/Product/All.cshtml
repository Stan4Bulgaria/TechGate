@using TechGate.Core.Models
@model ProductPageViewModel

<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <form method="get" asp-action="FilteredProducts">
                <div class="bg-light p-3 rounded shadow-sm">
                    <h5 class="mb-4">Filter Products</h5>

                    <div class="mb-3">
                        <label for="priceRange" class="form-label">Max Price</label>
                        <input type="number" class="form-control" name="maxPrice" placeholder="Enter maximum price">
                    </div>
                    <div class="mb-3">
                        <label for="priceRange" class="form-label">Min Price</label>
                        <input type="number" class="form-control" name="minPrice" placeholder="Enter mininum price">
                    </div>

                    <div class="mb-3">
                        <label for="categorySelect" class="form-label">Category</label>
                        <select id="categorySelect" name="categoryId" class="form-select">
                            <option value="" selected>All Categories</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>

                    <button class="btn btn-primary w-100" type="submit">Apply Filters</button>
                </div>
            </form>
        </div>

        <!-- Products -->
        <div class="col-md-9">
            <div class="row g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <img src="@product.ImageUrl"
                                 class="card-img-top p-3"
                                 alt="@product.Name"
                                 style="max-height: 200px; object-fit: contain; border-radius: 0.5rem;">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-truncate">@product.Name</h5>
                                <p class="card-text text-muted mb-3"><strong>Price:</strong> $@product.Price</p>
                                <a href="/Product/Details/@product.Id" class="btn btn-primary mt-auto">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>