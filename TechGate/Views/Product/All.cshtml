@using TechGate.Core.Models.Product
@model ICollection<ProductCardViewModel>
<div class="card-group">

    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <!-- Image with object-fit: cover and proper styling -->
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 300px;">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text"><small class="text-muted">@product.Price</small></p>
                </div>
            </div>
        </div>
    }

</div>
