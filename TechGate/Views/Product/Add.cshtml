    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model AddProductFormViewModel;

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div class="container">
            <h4 class="text-center">Adding Product</h4>
            <form asp-controller="Product" asp-action="Add" method="post" class="collapse-horizontal p-4 border rounded bg-light shadow">
                <div class="mb-4">
                    <label asp-for="@Model.Name" class="form-label fw-bold">Name</label>
                    <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Enter product name">
                    <span asp-validation-for="@Model.Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="@Model.Description" class="form-control" rows="3" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="@Model.Description" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.Price" class="form-label fw-bold">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="@Model.Price" type="number" step="0.01" class="form-control" placeholder="Enter price">
                    </div>
                    <span asp-validation-for="@Model.Price" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.ImageUrl" class="form-label fw-bold">Image URL</label>
                    <input asp-for="@Model.ImageUrl" type="url" class="form-control" placeholder="Enter image URL">
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="@Model.AmountInStock" class="form-label fw-bold">Amount In Stock</label>
                    <input asp-for="@Model.AmountInStock" type="number" class="form-control" placeholder="Enter stock quantity">
                    <span asp-validation-for="@Model.AmountInStock" class="text-danger small"></span>
                </div>
                <div class="mb-4">
                    <label asp-for="@Model.CategoryId" class="form-label fw-bold">Select Category</label>
                    <select asp-for="@Model.CategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                        <option value="">Select a category...</option>
                    </select>
                    <span asp-validation-for="@Model.CategoryId" class="text-danger small"></span>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </div>
            </form>

        </div>

    </div>
</div>

  
